{
  "type": "WorldlyTooltip",
  "skin": "HUD",
  "contents": {
    "type": "UIBox",
    "layoutInfo": {
      "use-content-width": true,
      "use-content-height": true
    },
    "contents": {
      "type": "relativeLayout",
      "contents": [
        {
          "type": "ItemIcon",
          "id": "icon",
          "layoutInfo": {
            "width": 50,
            "height": 50,
            "position-horizontal-center": {},
            "position-top": {
              "offset": 3
            }
          }
        },
        {
          "type": "columnLayout",
          "id": "tooltipContainer",
          "fillVerticalSpace": false,
          "contents": [
            {
              "type": "UILabel",
              "id": "blockName"
            },
            {
              "type": "UIList",
              "id": "tooltip"
            }
          ],
          "layoutInfo": {
            "use-content-width": true,
            "use-content-height": true,
            "min-height": 50,
            "position-horizontal-left": {},
            "position-top": {
              "target": "TOP",
              "widget": "icon",
              "offset": 3
            },
            "position-left": {
              "target": "RIGHT",
              "widget": "icon",
              "offset": 3
            }
          }
        }
      ]
    }
  }
}