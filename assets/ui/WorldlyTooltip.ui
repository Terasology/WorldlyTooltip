{
  "type": "WorldlyTooltip",
  "skin": "HUD",
  "contents": {
    "type": "relativeLayout",
    "contents": [
      {
        "type": "UIBox",
        "layoutInfo": {
          "position-horizontal-center": {},
          "use-content-height": true,
          "width": 300
        },
        "content": {
          "type": "columnLayout",
          "columns": 1,
          "autoSizeColumns": true,
          "layoutInfo": {
            "use-content-height": true
          },
          "contents": [
            {
              "type": "rowLayout",
              "id": "newWidget",
              "contents": [
                {
                  "type": "ItemIcon",
                  "id": "icon",
                  "layoutInfo": {
                    "height": 50,
                    "width": 50
                  }
                },
                {
                  "type": "columnLayout",
                  "id": "tooltipContainer",
                  "columns": 1,
                  "autoSizeColumns": true,
                  "layoutInfo": {
                    "min-height": 50
                  },
                  "contents": [
                    {
                      "type": "UILabel",
                      "id": "name"
                    },
                    {
                      "type": "UIList",
                      "id": "tooltip"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ]
  }
}